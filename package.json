{
  "name": "elements",
  "private": true,
  "repository": "https://github.com/rentalutions/elements.git",
  "author": "Patrick Krawczykowski <patrick@dreadful.design>",
  "scripts": {
    "storybook": "start-storybook --quiet -p 8080 -c .storybook",
    "build": "lerna run build --ignore @rent_avail/docs",
    "watch": "lerna run watch --parallel",
    "start": "concurrently -n storybook,lerna \"yarn storybook\" \"yarn watch\"",
    "build:docs": "yarn workspace @rent_avail/docs build",
    "start:docs": "rm -rf ./docs/.mdx-data && yarn workspace @rent_avail/docs dev",
    "update": "lerna version --no-push --no-private --include-merged-tags",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@storybook/addon-docs": "^6.1.11",
    "@storybook/addon-essentials": "^6.1.11",
    "@storybook/addon-storysource": "^6.1.11",
    "@storybook/react": "^6.1.11",
    "@testing-library/dom": "^7.29.0",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/react-hooks": "^3.7.0",
    "@testing-library/user-event": "^12.6.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-styled-components": "^1.12.0",
    "clsx": "^1.1.0",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.15.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "lerna": "^3.22.0",
    "microbundle": "^0.12.2",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "styled-components": "^5.2.1"
  },
  "workspaces": [
    "docs",
    "packages/*"
  ],
  "prettier": {
    "semi": false
  }
}
