{
  "name": "elements",
  "private": true,
  "repository": "https://github.com/rentalutions/elements.git",
  "author": "Patrick Krawczykowski <patrick@dreadful.design>",
  "scripts": {
    "bootstrap": "yarn && lerna bootstrap --force-local",
    "build": "lerna run build --ignore @rent_avail/docs",
    "build:storybook": "build-storybook --quiet -c .storybook -o storybook",
    "build:docs": "yarn workspace @rent_avail/docs build",
    "check": "lerna changed --include-merged-tags",
    "clean": "lerna clean --yes && rm -rf node_modules",
    "create": "node ./scripts/create-package.js",
    "release": "lerna version --no-push --no-private --include-merged-tags",
    "start": "concurrently -n storybook,lerna \"yarn storybook\" \"yarn watch\"",
    "start:ts": "concurrently -n lerna,storybook \"yarn watch:ts\" \"yarn storybook:ts\"",
    "start:docs": "rm -rf ./docs/.mdx-data && yarn workspace @rent_avail/docs dev",
    "storybook": "start-storybook --quiet -p 8080 -c .storybook",
    "storybook:ts": "start-storybook --port 8080 --config-dir .storybook-ts --quiet --no-manager-cache",
    "test": "jest",
    "watch": "lerna run watch --parallel",
    "watch:ts": "lerna run watch:ts --parallel"
  },
  "devDependencies": {
    "@babel/core": "^7.13.14",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@storybook/addon-essentials": "^6.2.1",
    "@storybook/addon-storysource": "^6.2.1",
    "@storybook/react": "^6.2.1",
    "@testing-library/dom": "^7.30.3",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.6",
    "@testing-library/react-hooks": "^5.1.1",
    "@testing-library/user-event": "^13.1.1",
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.3",
    "@types/styled-components": "^5.1.9",
    "@types/styled-system": "^5.1.10",
    "@types/styled-system__css": "^5.0.15",
    "@types/styled-system__theme-get": "^5.0.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-styled-components": "^1.12.0",
    "concurrently": "^6.0.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "microbundle": "^0.13.0",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "styled-components": "^5.2.3",
    "typescript": "^4.2.3"
  },
  "workspaces": [
    "docs",
    "packages/*"
  ],
  "prettier": {
    "semi": false
  }
}
